<?xml version="1.0"?> 
<sdf version="1.4">
  <world name="default">
    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Robot -->
    <model name="pan_tilt">
      <static>false</static>
      <pose>0 0 0 0 0 0</pose>

      <link name="l_pan">
        <pose>0 0 0 0 0 0</pose>
        <inertial>
          <pose>0 0 0 0 0 0</pose>
          <mass>10000</mass>
        </inertial>
        <visual name="visual">
          <pose>0 0 0.020 0 0 0</pose>
          <geometry>
            <box><size>0.050 0.032 0.040</size></box>
          </geometry>
        </visual>
        <collision name="collision">
          <pose>0 0 0.020 0 0 0</pose>
          <geometry>
            <box><size>0.050 0.032 0.040</size></box>
          </geometry>
        </collision>
      </link>
      <link name="l_tilt">
        <pose>0.0125 0 0.045 0 0 0</pose>
        <inertial><mass>50</mass></inertial>
        <visual name="visual">
          <pose>0 0 0.025 0 0 0</pose>
          <geometry>
            <box><size>0.040 0.032 0.050</size></box>
          </geometry>
        </visual>
        <collision name="collision">
          <pose>0 0 0.025 0 0 0</pose>
          <geometry>
            <box><size>0.040 0.032 0.050</size></box>
          </geometry>
        </collision>
      </link>

      <link name="l_camera">
        <pose>0.0125 0 0.120 0 0 0</pose>
        <inertial><mass>0.01</mass></inertial>
        <visual name="visual">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <sphere><radius>0.015</radius></sphere>
          </geometry>
        </visual>
        <collision name="collision">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <sphere><radius>0.015</radius></sphere>
          </geometry>
        </collision>

        <sensor name="camera" type="camera">
          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>320</width>
              <height>240</height>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
          </camera>
          <always_on>1</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>
        </sensor>
      </link>

      <joint type="revolute" name="j_pan">
        <pose>0.0125 0 0.040 0 0 0</pose>
        <parent>l_pan</parent>
        <child>l_tilt</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <upper>2.0943951023931954923084289221863</upper>  <!--  120 deg -->
            <lower>-2.0943951023931954923084289221863</lower> <!-- -120 deg -->
          </limit>
        </axis>
      </joint>
      <joint type="revolute" name="j_tilt">
        <pose>0 0 0.0375 0 0 0</pose>
        <parent>l_tilt</parent>
        <child>l_camera</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <upper>1.5707963267948966192313216916398</upper>  <!--  90 deg -->
            <lower>-1.5707963267948966192313216916398</lower> <!-- -90 deg -->
          </limit>
        </axis>
      </joint>
      
      <!--<plugin name="pt_ach_ctl" filename="build/libpt_ach_ctl.so">
        <pan>j_pan</pan>
        <tilt>j_tilt</tilt>
      </plugin>-->
    </model>
    
    <model name="sought_sphere">
      <!-- pose gets taken care of by animator -->
      <pose>1 0 0.5 0 0 0</pose>
      <link name="link">
      	<visual name="visual">
      	  <geometry>
      	    <sphere><radius>0.025</radius></sphere>
      	  </geometry>
      	  <material>
      	    <ambient>0 0 1 1</ambient>
      	    <diffuse>0 0 1 1</diffuse>
      	    <specular>0.1 0.1 0.1 1</specular>
      	    <emissive>0 0 0 0</emissive>
      	  </material>
      	</visual>
      </link>
      <static>true</static>
      <!--<plugin name="move_sphere" filename="build/libmove_sphere.so" />-->
    </model>

    <!-- Light Source -->
    <light type="directional" name="sun">
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1.0 1.0 1.0 1</diffuse>
      <specular>0 0 0 1</specular>
      <attenuation>
        <range>20</range>
        <linear>0.01</linear>
        <constant>0.8</constant>
        <quadratic>0.0</quadratic>
      </attenuation>
      <direction>0.0 0.2 -8.0</direction>
      <cast_shadows>true</cast_shadows>
    </light>   
  </world>
</sdf>
